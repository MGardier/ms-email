# DATABASE (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ms_email"

# POSTGRES (Docker)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ms_email

# PGADMIN (Docker)
PGADMIN_EMAIL=root@local.dev
PGADMIN_PASSWORD=password

# RABBITMQ
RABBITMQ_URL=amqp://user:password@localhost:5672
RABBITMQ_QUEUE=email_queue
RABBITMQ_PREFETCH=1

# HTTP (health check)
PORT=3000

# EMAIL - General
EMAIL_FROM="no-reply@domain.com"

# EMAIL - Provider Selection (both required)
EMAIL_PROVIDER_PRIMARY=resend
EMAIL_PROVIDER_SECONDARY=mailjet

# EMAIL - Test Mode
EMAIL_USE_TEST_PROVIDER=false
EMAIL_TEST_PROVIDER=mailpit

# EMAIL - Retry Configuration
EMAIL_RETRY_COUNT=3
EMAIL_RETRY_DELAY_MS=1000
EMAIL_RETRY_BACKOFF_MULTIPLIER=2

# MAILPIT (local development / test mode)
MAILPIT_HOST=localhost
MAILPIT_PORT=1025

# RESEND (production)
RESEND_API_KEY=re_xxxxxxxx

# MAILJET (production)
MAILJET_API_KEY=xxxxxxxx
MAILJET_API_SECRET=xxxxxxxx
